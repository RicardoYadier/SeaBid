<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Login - Sea Bid</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Jura:wght@700&display=swap">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            background-color: #ffffff;
        }

        .header {
            background-color: #233845;
            padding: 16px 0;
            display: flex;
            justify-content: center;
            position: relative;
        }

        .user-icon {
            position: absolute;
            top: 50%;
            right: 24px;
            transform: translateY(-50%);
        }

        .user-icon img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }

        .navigation-pill-list {
            display: flex;
            gap: 24px;
        }

        .navigation-pill a {
            color: #ffffff;
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 8px;
            transition: all 0.3s ease-in-out;
            font-weight: bold;
        }

        .navigation-pill a:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }

        .hero-form {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 100px 0;
        }

        .title7 {
            font-size: 48px;
            font-weight: bold;
            color: #1e1e1e;

        }

        .input-field select {
            padding: 12px;
            border-radius: 8px;
            border: 1px solid #d9d9d9;
            font-size: 16px;
            color: #233845;
            width: 100%;
            margin-bottom: 16px;
            /* igual que los inputs */
            background-color: #fff;
            appearance: none;
            /* quita flecha por defecto en algunos navegadores */
        }

        .form-contact {
            background-color: #ffffff;
            border: 1px solid #d9d9d9;
            padding: 32px;
            border-radius: 12px;
            max-width: 400px;
            width: 100%;
            text-align: left;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .input-field {
            display: flex;
            flex-direction: column;
            margin-bottom: 16px;
        }

        .input-field label {
            font-size: 16px;
            font-weight: bold;
            color: #233845;
            margin-bottom: 6px;
        }

        .input-field input {
            padding: 12px;
            border-radius: 8px;
            border: 1px solid #d9d9d9;
            font-size: 16px;
            color: #233845;
        }

        .button4 {
            width: 100%;
            padding: 12px;
            background-color: #1e1e1e;
            color: #ffffff;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

        .button4:hover {
            background-color: #444444;
        }

        .navigation-pill a,
        .navigation-pill a:visited {
            color: #ffffff;
        }

        .navigation-pill a.active {
            background-color: rgba(255, 255, 255, 0.2);
            /* o usa transparent si prefieres quitarlo */
            color: #ffffff !important;
        }
    </style>
</head>

<body>
    <%- include('partials/header') %>

    <div class="hero-form">
        <div id="liveAlertPlaceholder"></div> <!-- Alert placeholder -->
        <div class="text-content-title">
            <h1 class="title7">Login</h1>
        </div>

        <div class="form-contact">
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div class="input-field">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <div class="input-field">
                    <label for="userType">Profile:</label>
                    <select id="userType" name="userType" required>
                        <option value="" disabled selected>Select profile</option>
                        <option value="Fisher">Fisher</option>
                        <option value="Restaurant">Restaurant</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Sign In</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const alertPlaceholder = document.getElementById('liveAlertPlaceholder');

        const appendAlert = (message, type) => {
            const wrapper = document.createElement('div');
            wrapper.innerHTML = [
                `<div class="alert alert-${type} alert-dismissible" role="alert">`,
                `   <div>${message}</div>`,
                '   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>',
                '</div>'
            ].join('');

            alertPlaceholder.append(wrapper);
        };

        // Check if the message exists and display it as an alert
        
    </script>
    <% if (message) { %> 
    <script>
            document.addEventListener('DOMContentLoaded', function () {
            appendAlert("<%= message %>", "danger"); // Use "danger" for error messages
            });
    </script>
    <% } %>
</body>

</html>